<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.horrors.newhorror">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/ghost"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ghost"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        android:usesCleartextTraffic="true">
        <activity android:name=".view.SignInActivity">
        </activity>
        <activity
            android:name=".view.FriendDisplay"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.AboutFilm"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.EnterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.LoadFilmInsert"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>